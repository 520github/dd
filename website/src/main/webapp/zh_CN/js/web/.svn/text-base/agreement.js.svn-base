
function showAgreement() {
          jQuery("#guide").show();
          $.layer({
		        v_istitle:false,
		        v_showclose:false,
		        v_btns : 0,
		        v_box : 1,
		        v_dom : '#guide',
		        v_area : ['630px','555px'],
		        v_offset : ['20px','400px']
	      });
}

function cancel() {
	$("#agree").removeAttr("checked");
	jQuery("#guide").dialog("close");
}

function agree() {
	$("#agree").attr("checked", "checked");
	jQuery("#guide").dialog("close");
}
